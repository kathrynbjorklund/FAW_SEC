#Packages
library(quanteda)
library(tidyverse)
library(stm)
library(tm)

#STM
m <- stm(dfm, K = 33, emtol = 0.0000001, max.em.its = 1000, control = list("allow.neg.change" = FALSE))

#STM info
#High Prob and FREX words
labelTopics(m)

#Expected topic proportions
plot.STM(m)

#Topics in documents
findThoughts(
  m,
  texts = texts(corp),
  topics = 33,
  n = 5)
  
#Year Since Introduction as Prevalence Covariate
m = stm(dfm, K = 33, emtol = 0.0000001, prevalence =~ publication_date_minus_country_entry_date, max.em.its = 1000, control = list("allow.neg.change" = FALSE))

#References
#vanatteveldt, Structural Topic Modeling, (2019), GitHub Repository, https://github.com/ccs-amsterdam/r-course-material/blob/master/tutorials/r_text_stm.md#spline-function
